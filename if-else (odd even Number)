#include <iostream>
using namespace std;

int main()
{
    // User enter an integer number
    // program will say it's odd or even number

    int number;

    cout << "Enter a Number: ";
    cin >> number;

    if(number %2 == 0){
        cout << "Even Number" << endl;
    }
    else{
        cout << "Odd Number." << endl;
    }

    system("pause>0");
}
